{
  "name": "dam-africa-v2",
  "version": "1.0.0",
  "description": "Driver Loan Management Platform for CÃ´te d'Ivoire",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:admin": "cd apps/admin-web && npm run dev",
    "build": "npm run build:api && npm run build:admin",
    "build:api": "cd apps/api && npm run build",
    "build:admin": "cd apps/admin-web && npm run build",
    "test": "npm run test:api",
    "test:api": "cd apps/api && npm test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:seed": "cd apps/api && npm run seed",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NAFFAGLOBAL/dam-africa-v2.git"
  },
  "author": "NAFFA Global",
  "license": "PROPRIETARY"
}
